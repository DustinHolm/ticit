{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "vcs": {
        "enabled": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": ["src/**/*.ts"]
    },
    "formatter": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
