        "eslint-plugin-vitest": "^0.3.20",
        "jsdom": "^23.2.0",
        "prettier": "^3.2.4",
        "prettier-plugin-svelte": "^3.1.2",
        "sass": "^1.70.0",
        "storybook": "^7.6.10",
        "svelte": "^4.2.9",
        "svelte-check": "^3.6.3",
        "svelte-preprocess": "^5.1.3",
