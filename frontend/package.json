{
    "type": "module",
    "scripts": {
        "start": "vite",
        "build": "vite build",
        "storybook": "storybook dev -p 6006",
        "test:all": "vitest run --silent",
        "test:watch": "vitest watch --coverage",
        "check:lint": "biome lint && npm run util:prettier -- -c && tsc && svelte-check",
        "check:fix": "biome lint --write && npm run util:prettier -- -w",
        "util:eslint": "eslint --no-error-on-unmatched-pattern ./src ./tests ./*.ts ./*.js",
        "util:prettier": "prettier --no-error-on-unmatched-pattern ./src ./tests ./*.ts ./*.js"
    },
    "dependencies": {
        "@tauri-apps/api": "^2.10.1",
        "@tauri-apps/plugin-shell": "^2.3.5",
        "@tauri-apps/plugin-updater": "^2.10.0",
        "date-fns": "^4.1.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.14",
        "@storybook/addon-docs": "^9.1.17",
        "@storybook/addon-svelte-csf": "^5.0.8",
        "@storybook/svelte-vite": "^9.1.17",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/svelte": "^5.3.1",
        "@testing-library/user-event": "^14.5.2",
        "@tsconfig/svelte": "^5.0.7",
        "@vitest/coverage-v8": "^4.0.18",
        "jsdom": "^28.0.0",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.4.1",
        "sass": "^1.97.3",
        "storybook": "^9.1.17",
        "svelte": "^5.49.2",
        "svelte-check": "^4.3.6",
        "svelte-preprocess": "^6.0.3",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    }
}
