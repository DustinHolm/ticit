{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:jest-dom/recommended", "plugin:testing-library/dom"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["jest", "jest-dom", "svelte3", "testing-library"],
    "overrides": [
        {
            "files": ["*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
