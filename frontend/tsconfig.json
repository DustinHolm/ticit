{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "es2022",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noImplicitAny": true,
        "strict": true,
        "target": "ES2022",
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "__mocks__/**/*",
        "*.ts",
        "*.js",
        "*.cjs",
        ".eslintrc.cjs"
    ],
    "exclude": ["node_modules"]
}
