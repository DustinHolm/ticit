{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "esModuleInterop": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": true,
        "strict": true,
        "target": "ES2022"
    },
    "include": ["src/**/*", "tests/**/*", "__mocks__/**/*", "*.ts", "*.js", "*.cjs"],
    "exclude": ["node_modules"]
}
